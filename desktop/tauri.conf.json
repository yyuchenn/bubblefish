{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bubblefish",
  "version": "0.1.0",
  "identifier": "com.yyuchenn.bubblefish",
  "build": {
    "frontendDist": "../frontend/build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/plugins/*"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "displayLanguageSelector": false,
        "languages": ["SimpChinese", "TradChinese", "English", "Japanese"],
        "headerImage": "./resources/nsis/header.bmp",
        "sidebarImage": "./resources/nsis/sidebar.bmp",
        "installerIcon": "./icons/installer_icon.ico"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/yyuchenn/bubblefish/updater/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc3N0ZBNTM0NUU5RjgwQTMKUldTamdKOWVOS1YvZHpxcSs4NzMvSlU0Y0w0NWdKRlhtMzFIVVd2UVZOQ1NLQkNzbDVjdVVvUzcK"
    }
  }
}
